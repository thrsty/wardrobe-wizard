<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wardrobe_wizard.newItem"
             Title="New Item">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="10"
        Margin="6, 0, 6, 0">

        <Editor
            x:Name="nameOfItem"
            Placeholder="Name"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Picker
            x:Name="typePicker"
            Title="Type"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Editor
            x:Name="brandOfItem"
            Placeholder="Brand"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Picker
            x:Name="fitPicker"
            Title="Fit"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Button
            x:Name="photoBtn"
            Text="Take photo"
            Clicked="photoBtn_Clicked"/>

        <Editor
            x:Name="materialOfItem"
            Placeholder="Material"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Picker
            x:Name="pricePicker"
            Title="Price"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Picker
            x:Name="formalityPicker"
            Title="Formality"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Fill"/>

        <Button
            x:Name="DoneBtn"
            Text="Done"
            Clicked="DoneBtn_Clicked"
            HorizontalOptions="Fill"/>

    </VerticalStackLayout>

</ContentPage>
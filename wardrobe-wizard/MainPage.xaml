<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wardrobe_wizard.MainPage"
             BackgroundColor="#291732">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="20,18"
            VerticalOptions="Start">
            
            <Label
                Text="Good Morning!"
                FontAttributes="Bold"
                TextColor="#F9F6EE"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                Padding="5"
                HorizontalOptions="Start" />

            <Border StrokeThickness="2">
                <Image
                    Source="cloud.png"
                    SemanticProperties.Description="cloud for tha weather"
                    
                    HeightRequest="50"
                    HorizontalOptions="Start" />
            </Border>

            <Label
                Text="20° and {condition}"
                FontAttributes="Bold"
                TextColor="#F9F6EE"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="current weather state"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

